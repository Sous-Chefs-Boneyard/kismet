# Kismet config file
# Generated by Chef for <%= node['fqdn'] %>

<% @config_opts.each do |key, value| -%>
<%   next if value.nil? -%>
<%   case value -%>
<%   when Array -%>
<%     value.each do |v| -%>
<%=      key %>=<%= v%>
<%     end -%>
<%   when String, Integer -%>
<%=    key %>=<%= value %>
<%   end -%>
<% end -%>

# Where state info, etc, is stored.  You shouldnt ever need to change this.
# This is a directory.
configdir=%h/.kismet/